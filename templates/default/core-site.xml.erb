<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<!-- Hadoop core-site config generated by Chef -->

<configuration>
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://<%= node['pio']['conf']['namenode_host'] %>:<%= node['pio']['conf']['namenode_port'] %></value>
    </property>

    <property>
        <name>hadoop.tmp.dir</name>
        <value>file://<%= @datadir %>/tmp</value>
    </property>
</configuration>
