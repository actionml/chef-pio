<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<!-- Hadoop hdfs-site config generated by Chef -->

<configuration>
    <!-- Disable replication since it's always a single machine setup -->
    <property>
      <name>dfs.replication</name>
      <value>1</value>
    </property>

    <!-- Don't perform reverse DNS check for datanode
    when they connect to namenode -->
    <property>
        <name>dfs.namenode.datanode.registration.ip-hostname-check</name>
        <value>false</value>
    </property>

    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file://<%= @datadir %>/dfs/name</value>
    </property>

    <property>
        <name>dfs.namenode.checkpoint.dir</name>
        <value>file://<%= @datadir %>/dfs/sname</value>
    </property>

    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file://<%= @datadir %>/dfs/data1</value>
    </property>
</configuration>
