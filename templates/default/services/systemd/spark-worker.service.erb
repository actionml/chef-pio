[Unit]
Description=Spark Worker Service
After=syslog.target network.target
Requires=spark-master.service
PartOf=spark.service

[Service]
User=<%= @user %>
Group=<%= @group %>
Environment=JAVA_HOME=<%= @java_home %>
Environment=DAEMON_ARGS=
LimitNOFILE=<%= @nofile %>
ExecStart=<%= @appdir %>/sbin/start-spark.sh worker $DAEMON_ARGS

[Install]
WantedBy=multi-user.target
