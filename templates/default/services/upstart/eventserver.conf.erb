description "PIO EventServer"

start on filesystem and net-device-up IFACE!=lo
stop on runlevel [!2345]

kill timeout 20
setuid <%= @user %>
setgid <%= @group %>

limit nofile <%= @nofile %> <%= @nofile %>

env JAVA_HOME=<%= @java_home %>
env PIO_LOG_DIR<%= @logdir %>
env=PIO_EVENTSERVER_PORT=7070

script
    # source default daemon settings (overrides the defaults from this unit)
    . <%= @environment_file %>

    exec <%= @appdir %>/bin/pio eventserver --port $PIO_EVENTSERVER_PORT
end script
